{{ header }}
<div id="product-category" class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ol>
  </nav>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set content_class = 'col-lg-6' %}
    {% elseif column_left or column_right %}
    {% set content_class = 'col-lg-9' %}
    {% else %}
    {% set content_class = 'col-12' %}
    {% endif %}
    <div id="content" class="{{ content_class }}">{{ content_top }}
      <h2>{{ heading_title }}</h2>
      {% if thumb or description %}
      <div class="row"> {% if thumb %}
        <div class="col-sm-2"><img src="{{ thumb }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-thumbnail" /></div>
        {% endif %}
        {% if description %}
        <div class="col-sm-10">{{ description }}</div>
        {% endif %}</div>
      <hr>
      {% endif %}
      {% if categories %}
      <h3>{{ text_refine }}</h3>
      {% if categories|length <= 5 %}
      <div class="row">
        <div class="col-sm-4">
          <ul>
            {% for category in categories %}
            <li><a href="{{ category.href }}">{{ category.name }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% else %}
      <div class="row">{% for category in categories|batch((categories|length / 3)|round(1, 'ceil')) %}
        <div class="col-sm-4">
          <ul>
            {% for child in category %}
            <li><a href="{{ child.href }}">{{ child.name }}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}</div>
      <br />
      {% endif %}
      {% endif %}
      {% if products %}
      <div class="form-row">
        <div class="col-auto d-none d-sm-block">
          <div class="btn-group btn-group-sm">
            <button type="button" id="list-view" class="btn btn-secondary" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button>
            <button type="button" id="grid-view" class="btn btn-secondary" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-auto ml-auto text-right">
          <div class="form-group"><a href="{{ compare }}" id="compare-total" class="btn btn-link btn-sm">{{ text_compare }}</a></div>
        </div>
        <div class="col-6 col-md-auto ml-auto">
          <div class="form-group input-group input-group-sm">
            <div class="input-group-prepend">
              <label class="input-group-text" for="input-sort"><i class="fa fa-sort d-xl-none"></i> <span class="d-none d-xl-inline">{{ text_sort }}</span></label>
            </div>
            <select id="input-sort" class="custom-select custom-select-sm" onchange="location = this.value;">
              {% for sorts in sorts %}
              {% if sorts.value == '%s-%s'|format(sort, order) %}
              <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
              {% else %}
              <option value="{{ sorts.href }}">{{ sorts.text }}</option>
              {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>
        <div class="col-6 col-md-auto">
          <div class="form-group input-group input-group-sm">
            <div class="input-group-prepend">
              <label class="input-group-text" for="input-limit"><i class="fa fa-eye d-xl-none"></i> <span class="d-none d-xl-inline">{{ text_limit }}</span></label>
            </div>
            <select id="input-limit" class="custom-select custom-select-sm" onchange="location = this.value;">
              {% for limits in limits %}
              {% if limits.value == limit %}
              <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
              {% else %}
              <option value="{{ limits.href }}">{{ limits.text }}</option>
              {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        {% for product in products %}
          <div class="product-layout product-list col-12 col-md-6 col-lg-4">
            <div class="product-thumb">
              <figure class="image">
                <a class="d-block" href="{{ product.href }}">
                  <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="product-thumb__image img-fluid" />
                </a>
              </figure>
              <div class="caption">
                <h4 class="title"><a href="{{ product.href }}">{{ product.name }}</a></h4>
                <p class="description">{{ product.description }}</p>
                {% if product.rating %}
                <div class="rating">
                  {% for i in 1..5 %}
                    {% if product.rating < i %}
                      <i class="fa fa-star star-empty"></i>
                      {% else %}
                      <i class="fa fa-star"></i>
                    {% endif %}
                  {% endfor %}
                </div>
                {% endif %}
                {% if product.price %}
                <div class="price">
                  {% if not product.special %}
                    {{ product.price }}
                  {% else %}
                    <span class="price-new">{{ product.special }}</span>
                    <del class="price-old">{{ product.price }}</del>
                  {% endif %}
                  {% if product.tax %}
                    <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                  {% endif %}
                </div>
                {% endif %}
              </div>
              <div class="button-group" role="group">
                <button type="button" class="btn btn-link" data-toggle="tooltip" title="{{ button_cart }}" onclick="cart.add('{{ product.product_id }}');"><i class="fa fa-shopping-cart"></i></button>
                <button type="button" class="btn btn-link" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                <button type="button" class="btn btn-link" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% endif %}
      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons clearfix">
        <div class="float-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
