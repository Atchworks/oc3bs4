<div class="buttons clearfix">
  <div class="float-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" data-loading-text="{{ text_loading }}" />
  </div>
</div>
<script type="text/javascript"><!--
$('#button-confirm').on('click', function() {
	$.ajax({
		type: 'get',
		url: 'index.php?route=extension/payment/free_checkout/confirm',
		cache: false,
		beforeSend: function() {
			$('#button-confirm').buttonState('loading');
		},
		complete: function() {
			$('#button-confirm').buttonState('reset');
		},
		success: function() {
			location = '{{ continue }}';
		}
	});
});
//--></script>
