{{ header }}
<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ol>
  </nav>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-check-circle"></i> {{ error }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set content_class = 'col-lg-6' %}
    {% elseif column_left or column_right %}
    {% set content_class = 'col-lg-9' %}
    {% else %}
    {% set content_class = 'col-12' %}
    {% endif %}
    <div id="content" class="{{ content_class }}">{{ content_top }}
        <h2>{{ heading_title }}</h2>

        {% if not cards %}
            <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ text_no_cards }}</div>
        {% else %}
            <table class="table table-bordered">
                {% for card in cards %}
                    <tr>
                        <td>
                            {{ card.text }}
                        </td>
                        <td class="text-right">
                            <a class="btn btn-danger remove_card" href="{{ card.delete }}">{{ text_delete }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}

        <div class="buttons clearfix">
            <a class="btn btn-secondary" href="{{ back }}">{{ text_back }}</a>
        </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
<script type="text/javascript">
$(document).ready(function() {
    $('.remove_card').click(function(e) {
        return confirm('{{ text_warning_card }}');
    });
});
</script>
{{ footer }}
